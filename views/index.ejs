<%- include("layout/header.ejs") %>
<main class="main">
  <div class="container">
    <div class="row my-4">
      <div class="col-lg-12">
        <div class="table-responsive">
          <% if (data != "") { %>
          <table class="table table-striped text-center my-5">
            <thead class="table-dark">
              <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Name</th>
                <th>E-mail</th>
                <th>Phone</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach((row, index) => { %>
              <tr>
                <td><%= index %></td>
                <td>
                  <img
                    src="<%=row.image %>"
                    alt=""
                    width="50px"
                    class="img-thumbnail"
                  />
                </td>
                <td><%= row.name %></td>
                <td><%= row.email %></td>
                <td><%= row.phone %></td>
                <td>
                  <a href="/edit_users/<%= row._id %>" class="text-success"
                    ><i class="fas fa-edit fa-lg mx-1"></i
                  ></a>
                  <form
                    action="delete_users/<%= row._id %>?_method=DELETE
                  "
                    method="POST"
                  >
                    <button class="text-danger btn-outline-none">
                      <i class="fas fa-trash fa-lg mx-1"></i>
                    </button>
                  </form>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
          <% } else { %>

          <h1 class="text-center text-secondary">
            No users found in the database
          </h1>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</main>
<%- include("layout/footer.ejs") %>
